        android:layout_weight="0.07" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/Level"
        android:layout_weight="0.02" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/qFinis"
        android:layout_weight="0.03" />
