        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/pseudo"
        android:layout_weight="0.04" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
