<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="NomAventure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/titreAventure" />

    <Button
        android:text="carte"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/btnCarte" />

    <TextView
        android:text="Expérience :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titreAventure"
        android:layout_alignLeft="@+id/btnCarte"
        android:layout_alignStart="@+id/btnCarte"
        android:layout_marginTop="40dp"
        android:id="@+id/txtViewXp" />

    <TextView
        android:text="Difficulté : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewXp"
        android:layout_alignLeft="@+id/txtViewXp"
        android:layout_alignStart="@+id/txtViewXp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtViewDifficult" />

    <TextView
        android:text="Prix de l'entrée :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewXp"
        android:layout_alignLeft="@+id/txtViewDifficult"
        android:layout_alignStart="@+id/txtViewDifficult"
        android:layout_marginTop="30dp"
        android:id="@+id/txtViewPrix" />

    <TextView
        android:text="nbrXp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewQtXp"
        android:layout_alignBaseline="@+id/txtViewXp"
        android:layout_alignBottom="@+id/txtViewXp"
        android:layout_toRightOf="@+id/txtViewXp"
        android:layout_toEndOf="@+id/txtViewXp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:text="prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/txtViewPrix"
        android:layout_alignBottom="@+id/txtViewPrix"
        android:layout_alignLeft="@+id/txtViewDiff"
        android:layout_alignStart="@+id/txtViewDiff" />

    <TextView
        android:text="Descriptif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewDescriptif"
        android:layout_below="@+id/txtViewXp"
        android:layout_alignLeft="@+id/txtViewXp"
        android:layout_alignStart="@+id/txtViewXp"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewDescription"
        android:layout_below="@+id/txtViewDescriptif"
        android:layout_alignLeft="@+id/txtViewDescriptif"
        android:layout_alignStart="@+id/txtViewDescriptif"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="difficulté"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewDiff"
        android:layout_alignBaseline="@+id/txtViewDifficult"
        android:layout_alignBottom="@+id/txtViewDifficult"
        android:layout_alignLeft="@+id/txtViewQtXp"
        android:layout_alignStart="@+id/txtViewQtXp" />

    <Button
        android:text="Lancer"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/btnLancer"
        />
</RelativeLayout>